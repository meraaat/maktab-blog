<%-contentFor('body')%>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div
        class="col-md-6 d-flex justify-content-center"
        style="align-items: center"
      >
        <img src="/images/logo-black.png" width="100" />
        <h3>مکتب بلاگ</h3>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12" style="display: flex; flex-wrap: wrap">
      <%articles.docs.forEach(article => {%>
      <div class="card" style="width: 16rem; margin: 0.5em">
        <img
          class="card-img-top"
          src="<%=article.image%>"
          alt="Card image cap"
          width="100%"
          height="150"
        />
        <div
          class="card-body d-flex"
          style="flex-direction: column; justify-content: space-between"
        >
          <div class="">
            <h4 class="card-title"><%=article.title%></h4>
            <p class="card-text"><%=article.text.substring(0, 20)%>...</p>
            <h6>
              نویسنده :‌ <%=`${article?.writer.firstName}
              ${article?.writer.lastName}`%>
            </h6>
            <h6><%=moment(article.date).format('jDD jMMMM jYYYY')%></h6>
          </div>

          <div>
            <a href="/article/<%=article._id%>" class="btn btn-info btn-block"
              >ادامه مطلب</a
            >
          </div>
        </div>
      </div>
      <%})%>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%-include('./includes/pagination.ejs', {pagination: articles})%>
    </div>
  </div>
</div>
